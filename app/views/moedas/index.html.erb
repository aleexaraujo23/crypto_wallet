<p id="notice"><%= notice %></p>

<h1>Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th>Valor Reais</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moedas.each do |moeda| %>
      <tr>
        <td><%= moeda.descricao %></td>
        <td><%= moeda.acronimo %></td>
        <td><%= image_tag moeda.url_image, width:25, heidth:25 %></td>
        <td><%= moeda.valor_reais %></td>
        <td><%= link_to 'Mostrar', moeda %></td>
        <td><%= link_to 'Editar', edit_moeda_path(moeda) %></td>
        <td><%= link_to 'Deletar', moeda, method: :delete, data: { confirm: 'Tem certeza ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Moeda', new_moeda_path %>
